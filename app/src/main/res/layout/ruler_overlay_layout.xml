<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000">

    <!-- Each line consists of a view for the line itself, a TextView for the label, and a handle for adjustment -->
    <!-- Line 1 -->
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="50dp"
        android:background="#FF0000" />
    
    <TextView
        android:id="@+id/line1_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/line1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-15dp"
        android:text="@string/line_1"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
    
    <View
        android:id="@+id/line1_handle"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/line1"
        android:layout_marginTop="-15dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/circle_handle" />

    <!-- Line 2 -->
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="100dp"
        android:background="#00FF00" />
    
