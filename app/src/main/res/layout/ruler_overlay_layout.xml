        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/line2"
        android:layout_marginTop="-15dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/circle_handle" />

    <!-- Line 3 -->
