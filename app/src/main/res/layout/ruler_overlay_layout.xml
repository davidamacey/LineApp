<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusable="false"
    android:id="@+id/ruler_overlay_root">

    <!-- Lines (Vertical) -->
    <View
        android:id="@+id/line1"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#FFA500"
        android:clickable="false"
        android:focusable="false" /> <!-- Orange -->

    <View
        android:id="@+id/line2"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#FFA500"
        android:clickable="false"
        android:focusable="false" />

    <View
        android:id="@+id/line3"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#FFA500"
        android:clickable="false"
        android:focusable="false" />

    <View
        android:id="@+id/line4"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#FFA500"
        android:clickable="false"
        android:focusable="false" />

    <View
        android:id="@+id/line5"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#FFA500"
        android:clickable="false"
        android:focusable="false" />

    <View
        android:id="@+id/line6"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#FFA500"
        android:clickable="false"
        android:focusable="false" />

    <View
        android:id="@+id/line7"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#FFA500"
        android:clickable="false"
        android:focusable="false" />


    <!-- Handles (Orange Buttons with Numbers) -->
    <!-- Position these at the top, their X coordinate will be set programmatically -->
    <Button
        android:id="@+id/line1_handle"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/orange_handle_background"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="center" />

    <Button
        android:id="@+id/line2_handle"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/orange_handle_background"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="center" />

    <Button
        android:id="@+id/line3_handle"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/orange_handle_background"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="center" />

    <Button
        android:id="@+id/line4_handle"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/orange_handle_background"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="center" />

    <Button
        android:id="@+id/line5_handle"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/orange_handle_background"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="center" />

    <Button
        android:id="@+id/line6_handle"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/orange_handle_background"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="center" />

    <Button
        android:id="@+id/line7_handle"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/orange_handle_background"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="center" />


    <!-- Close Button for the Overlay -->
    <Button
        android:id="@+id/close_overlay_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="Close" />

</RelativeLayout>